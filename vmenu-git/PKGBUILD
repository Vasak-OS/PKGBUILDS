# Maintainer: Joaquin (Pato) Decima <jdecima@vasak.net.ar>

pkgname=vmenu
pkgver=0.1.0
pkgrel=1
pkgdesc="Un men√∫ personalizado para VasakOS"
arch=('x86_64')
url="https://github.com/Vasak-OS/$pkgname"
license=('GPLv3')
depends=(
    'cairo'
    'desktop-file-utils'
    'gdk-pixbuf2'
    'glib2'
    'gtk3'
    'hicolor-icon-theme'
    'libsoup'
    'pango'
    'webkit2gtk-4.1'
)
makedepends=(
    'git'
    'openssl'
    'appmenu-gtk-module'
    'libappindicator-gtk3'
    'librsvg'
    'cargo'
    'bun'
    'rust'
)
source=("git+${url}.git")
sha256sums=('SKIP')

prepare() {
    cd "$srcdir/$pkgname"
    # Instalar dependencias con bun
    bun install
}

build() {
    cd "$srcdir/$pkgname"
    # Construir el proyecto
    bun run tauri build -b deb
}

package() {
    cp -a $srcdir/$pkgname/src-tauri/target/release/bundle/deb/${pkgname}_${pkgver}_*/data/* "${pkgdir}"
}

post_install() {
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
  update-desktop-database -q
}

post_upgrade() {
  post_install
}

post_remove() {
  gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
  update-desktop-database -q
}